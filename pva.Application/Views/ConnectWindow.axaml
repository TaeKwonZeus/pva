<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:pva.Application.ViewModels"
        mc:Ignorable="d"
        x:Class="pva.Application.Views.ConnectWindow"
        x:DataType="viewModels:ConnectWindowViewModel"
        Width="400"
        Height="120"
        CanResize="False"
        Title="Connect to server">

    <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*" Margin="10">
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontSize="18">
            Connect to server
        </TextBlock>
        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="0 0 0 5"
                 Text="{Binding Url}"
                 Watermark="Enter server URL here" />
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <CheckBox VerticalAlignment="Center" IsChecked="{Binding Remember}" />
            <TextBlock VerticalAlignment="Center">Remember</TextBlock>
        </StackPanel>
        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Command="{Binding Connect}">Connect</Button>
    </Grid>
</Window>